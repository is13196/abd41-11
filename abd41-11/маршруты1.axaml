<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="abd41_11.маршруты1"
        Title="маршруты1">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Content="Далее" Click="NextButton_Click"/>
            <DataGrid Name="МаршрутыGrid" x:CompileBindings="False" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="id" Binding="{Binding id}"></DataGridTextColumn>
                    <DataGridTextColumn Header="название" Binding="{Binding название}"></DataGridTextColumn>
                    <DataGridTextColumn Header="расстояние" Binding="{Binding расстояние}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
