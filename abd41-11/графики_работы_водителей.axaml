<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="abd41_11.графики_работы_водителей"
        Title="графики_работы_водителей">
    <Grid>
        <StackPanel Orientation="Horizontal">
            
        </StackPanel>
            <Button Content="Далее" Click="NextButton_Click"/>
            <DataGrid Name="Графики_работы_водителейGrid" x:CompileBindings="False" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="id" Binding="{Binding id}"></DataGridTextColumn>
                    <DataGridTextColumn Header="id_водителя" Binding="{Binding id_водителя}"></DataGridTextColumn>
                    <DataGridTextColumn Header="id_маршрута" Binding="{Binding id_маршрута}"></DataGridTextColumn>
                    <DataGridTextColumn Header="время_начала" Binding="{Binding время_начала}"></DataGridTextColumn>
                    <DataGridTextColumn Header="время_окончания" Binding="{Binding время_окончания}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
    </Grid>
</Window>
